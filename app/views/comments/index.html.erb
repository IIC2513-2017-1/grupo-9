<h1> Comments </h1>
<% if current_user %>
<h2><%= link_to 'Make a comment', comments_new_path %></h2>
<% end %>
<table>
  <tr>
    <th>User</th>
    <th>Project</th>
    <th>Content</th>
  </tr>
  <% @comments.each do |x| %>
  <tr>
    <% user = User.find(x.user_id) %>
    <td>  <%= user.first_name+" "+ user.last_name%> </td>
    <td>  <%= Project.find(x.project_id).name %> </td>
    <td>  <%= x.content %> </td>
    <td> <%= link_to 'Show' , x %> </td>

  <% end %>
</table>



