<h2 id="project-title"> Projects</h2>
<% if current_user %>
<a id="new-project" href="/projects/new"> Publicar proyecto</a>
<% end %>

<div class="projects-index">
<% @projects.each do |project| %>
  <% @user = User.find(project.user_id) %>

    <a href="/projects/<%=project.id%>" class="project-square">
    <img src="http://www.wpthemegenerator.com/wp-content/uploads/2012/06/Image.jpg">
    <h3 id="project-name"> <%= project.name %></h3>
    <p id="project-owner">Fundador: <%= @user.first_name %></p>
    <p id="project-goal">Meta: <%= project.goal %></p>
    </a>
<% end %>
</div>
